        <option value="Retired Staff">Retired Staff</option>
      </select>

      <label for="teamFilter">Team:</label>
      <select id="teamFilter">
        <option value="All">All Teams</option>
        <option value="Arabic Team">Arabic Team</option>
        <option value="English Team">English Team</option>
        <option value="More Soon">More Soon</option>
      </select>
    </div>

    <div id="team-container"></div>
  </div>

<script>
  /* JS هنا */
  const teamMembers = [
    {
      section: "AC Staff",
      name: "LAF",
      rank: "Moderator / Lead Helper",
      team: "Arabic Team",
      supportRank: "Support Staff",
      username: "lafkha",
      id: "603100373271707649",
      activityTime: "Soon",
      promotions: [
        "Member → Helper (6/17/2025)",
        "Helper → Trial Mod (7/15/2025) — + Lead Helper (7/26/2025)",
        "Trial Mod → Mod (8/10/2025)"
      ],
      guild: { name: "LLT Guild", link: "https://discord.gg/Rs6uCD2pVU" },
      testerAC: "Yes",
      testerARC: "Yes",
      bio: "Soon",
      note: "In LOA",
      avatar: "https://cdn.discordapp.com/avatars/603100373271707649/f1b53c403798593cb330431801cff64a.webp?size=1024"
    },
    {
      section: "Retired Staff",
      name: "Sami",
      rank: "Helper (before retiring)",
      team: "Arabic Team",
      supportRank: "Support Staff (before retiring)",
      username: "devsamisan",
      id: "688693772313559050",
      activityTime: "Unknown",
      promotions: [
        "Member → Helper (4/21/2025)",
        "Helper → Member (4/27/2025)"
      ],
      guild: { name: "Solo Guild", link: "https://discord.gg/bWWGH95HR2" },
      testerAC: "No",
      testerARC: "Yes",
      bio: "University Electrical Engineering student, Saudi, Owner of Solo Guild.",
      note: "DMs always open",
      avatar: "https://cdn.discordapp.com/avatars/688693772313559050/ed34f40ac5186c7046287862034e52f0.webp?size=1024"
    }
  ];

  function buildCard(member) {
    const promosHtml = member.promotions.map(p => `<div>${p}</div>`).join("");
    const guildHtml = member.guild.link
      ? `<a class="guild-link" href="${member.guild.link}" target="_blank" rel="noopener noreferrer">${member.guild.name}</a>`
      : member.guild.name;

    return `
      <div class="card" data-section="${member.section}">
        <img src="${member.avatar}" alt="${member.name}">
        <h2>${member.name}</h2>
        <p><strong>Section:</strong> ${member.section}</p>
        <p><strong>Rank:</strong> ${member.rank}</p>
        <p><strong>Team:</strong> ${member.team}</p>
        <p><strong>Support Rank:</strong> ${member.supportRank}</p>
        <p><strong>Username:</strong> ${member.username}</p>
        <p><strong>ID:</strong> ${member.id}</p>
        <p><strong>Active Time:</strong> ${member.activityTime}</p>
        <p><strong>Promotions:</strong><br>${promosHtml}</p>
        <p><strong>Guild:</strong> ${guildHtml}</p>
        <p><strong>Tester AC:</strong> ${member.testerAC}</p>
        <p><strong>Tester ARC:</strong> ${member.testerARC}</p>
        <p><strong>About:</strong> ${member.bio}</p>
        <p><strong>Note:</strong> ${member.note}</p>
      </div>
    `;
  }

  function renderCards(sectionFilter = "All", teamFilter = "All") {
    const container = document.getElementById("team-container");
    container.innerHTML = "";
    const filtered = teamMembers.filter(m => {
      const sectionMatch = sectionFilter === "All" ? true : m.section === sectionFilter;
      const teamMatch = teamFilter === "All" ? true : m.team === teamFilter;
      return sectionMatch && teamMatch;
    });
    filtered.forEach(member => {
      const wrapper = document.createElement("div");
      wrapper.innerHTML = buildCard(member);
      container.appendChild(wrapper.firstElementChild);
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    const sectionSelect = document.getElementById("sectionFilter");
    const teamSelect = document.getElementById("teamFilter");

    renderCards(sectionSelect.value, teamSelect.value);

    sectionSelect.addEventListener("change", () => {
      renderCards(sectionSelect.value, teamSelect.value);
    });

    teamSelect.addEventListener("change", () => {
      renderCards(sectionSelect.value, teamSelect.value);
    });
  });
</script>
</body>
